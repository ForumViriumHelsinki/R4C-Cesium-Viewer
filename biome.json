{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"**/src/**/*.{js,ts,vue}",
			"**/tests/**/*.{js,ts}",
			"!**/dist",
			"!**/dist-ssr",
			"!**/coverage",
			"!**/node_modules"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "warn",
				"noUnusedImports": "warn",
				"useExhaustiveDependencies": "off"
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noDoubleEquals": "warn",
				"noFallthroughSwitchClause": "warn",
				"noAssignInExpressions": "off",
				"useIterableCallbackReturn": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"useConst": "warn",
				"noUnusedTemplateLiteral": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noBannedTypes": "off"
			},
			"nursery": {
				"noFloatingPromises": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "es5",
			"semicolons": "asNeeded"
		},
		"globals": [
			"window",
			"document",
			"console",
			"fetch",
			"setTimeout",
			"clearTimeout",
			"setInterval",
			"clearInterval",
			"requestAnimationFrame",
			"cancelAnimationFrame",
			"performance",
			"localStorage",
			"sessionStorage",
			"navigator",
			"location",
			"URL",
			"URLSearchParams",
			"AbortController",
			"Blob",
			"Event",
			"indexedDB",
			"btoa",
			"atob",
			"alert",
			"requestIdleCallback",
			"describe",
			"it",
			"test",
			"expect",
			"beforeEach",
			"afterEach",
			"beforeAll",
			"afterAll",
			"vi",
			"vitest"
		]
	},
	"css": {
		"formatter": {
			"enabled": true
		},
		"linter": {
			"enabled": true
		}
	},
	"overrides": [
		{
			"includes": ["**/tests/**/*.ts", "**/tests/**/*.js"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					}
				}
			}
		},
		{
			"includes": ["**/*.config.js", "**/*.config.ts", "**/vite.config.ts"],
			"linter": {
				"rules": {
					"correctness": {
						"noUnusedVariables": "off"
					}
				}
			}
		},
		{
			"includes": ["**/*.vue"],
			"linter": {
				"rules": {
					"correctness": {
						"noUnusedVariables": "off",
						"noUnusedImports": "off"
					}
				}
			}
		}
	]
}
