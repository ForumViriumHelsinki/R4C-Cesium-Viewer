# Dbmate configuration
# This file is loaded automatically by dbmate

# Migration directory
DBMATE_MIGRATIONS_DIR=db/migrations

# Database URL (override in .env or environment)
# DATABASE_URL=postgres://username:password@localhost:5432/regions4climate

# Schema file location (for dbmate dump command)
# This creates a clean schema file representing the current migrated state
DBMATE_SCHEMA_FILE=db/schema.sql

# Wait for database connection
DBMATE_WAIT=true

# Migration table name (default: schema_migrations)
DBMATE_MIGRATIONS_TABLE=schema_migrations
