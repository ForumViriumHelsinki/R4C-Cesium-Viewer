# ==============================================================================
# Environment Configuration Template
# ==============================================================================
# Copy this file to .env and customize with your values
#
# Usage:
#   cp .env.example .env
#   # Edit .env with your values
#   npm run dev                    # Local frontend only (uses production APIs)
#   skaffold dev --port-forward    # Full stack with local services
# ==============================================================================

# ==============================================================================
# DEVELOPMENT WORKFLOWS
# ==============================================================================
#
# 1. FRONTEND ONLY (Quickest - uses production APIs)
#    Just run: npm run dev
#    No .env changes needed - defaults to production pygeoapi
#
# 2. SERVICES-ONLY + LOCAL FRONTEND (Faster iteration)
#    a. Set VITE_PYGEOAPI_HOST=localhost:5000
#    b. Run: skaffold run -p services-only --port-forward
#    c. Run: npm run dev
#
# 3. FULL STACK (All services in containers)
#    Run: skaffold dev --port-forward
#
# ==============================================================================

# ==============================================================================
# API Configuration
# ==============================================================================

# PygeoAPI Host (controls where building/geo data comes from)
# Default: pygeoapi.dataportal.fi (production)
# For local services: localhost:5000
VITE_PYGEOAPI_HOST=pygeoapi.dataportal.fi

# Digitransit API Key (optional - for public transport routing features)
# Get your key at: https://digitransit.fi/en/developers/api-registration/
VITE_DIGITRANSIT_KEY=

# ==============================================================================
# Error Tracking (Optional)
# ==============================================================================

# Sentry DSN (for error reporting)
SENTRY_DSN=

# Sentry Auth Token (for source map uploads during build)
SENTRY_AUTH_TOKEN=

# ==============================================================================
# Database Configuration (for local Skaffold development)
# ==============================================================================

# PostgreSQL connection string for dbmate migrations
# Default values work with local Skaffold setup
DATABASE_URL=postgres://regions4climate_user:regions4climate_pass@localhost:5432/regions4climate

# Database passwords (used by Skaffold to create secrets)
DB_PASSWORD=regions4climate_pass
DB_ADMIN_PASSWORD=postgres

# ==============================================================================
# Feature Flags
# ==============================================================================
# All flags default to enabled unless set to 'false'

# Data Layers
VITE_FEATURE_NDVI=true
VITE_FEATURE_FLOOD_LAYERS=false
VITE_FEATURE_250M_GRID=true
VITE_FEATURE_TREE_COVERAGE=true
VITE_FEATURE_LAND_COVER=true

# Graphics & Performance
VITE_FEATURE_HDR=false
VITE_FEATURE_AO=false
VITE_FEATURE_MSAA=true
VITE_FEATURE_FXAA=true
VITE_FEATURE_REQUEST_RENDER=false
VITE_FEATURE_3D_TERRAIN=true

# Analysis Tools
VITE_FEATURE_HEAT_HISTOGRAM=true
VITE_FEATURE_BUILDING_SCATTER=true
VITE_FEATURE_COOLING_OPTIMIZER=true
VITE_FEATURE_NDVI_ANALYSIS=true
VITE_FEATURE_SOCIOECONOMIC=true

# UI/UX
VITE_FEATURE_COMPACT_VIEW=false
VITE_FEATURE_MOBILE_OPTIMIZED=false
VITE_FEATURE_CONTROL_PANEL_DEFAULT=true
VITE_FEATURE_DATA_SOURCE_STATUS=true
VITE_FEATURE_LOADING_PERF=false
VITE_FEATURE_BACKGROUND_PRELOAD=false

# Integrations
VITE_FEATURE_BG_MAP_PROVIDERS=true

# Developer Tools
VITE_FEATURE_PERF_MONITOR=false
VITE_FEATURE_CACHE_VIZ=false
VITE_FEATURE_HEALTH_CHECKS=false

