# ==============================================================================
# Environment Configuration Template
# ==============================================================================
# Copy this file to .env and customize with your values
# The Skaffold pre-deploy hook will automatically generate Kubernetes secrets
# from the values below using dotenvx + envsubst
#
# Usage: skaffold dev
#        skaffold dev --profile=local-with-services
# ==============================================================================

# Kubernetes Secrets (Auto-generated)
# These values are used to populate k8s/secrets.yaml and k8s/migration-secret.yaml
# Leave empty for optional services

# Digitransit API Key (optional - for public transport routing features)
VITE_DIGITRANSIT_KEY=

# Sentry Error Tracking (optional - for production monitoring)
SENTRY_AUTH_TOKEN=
SENTRY_DSN=

# Database Credentials (for local development with PostgreSQL)
# These defaults work with the local Skaffold setup
DB_PASSWORD=regions4climate_pass
DB_ADMIN_PASSWORD=postgres

# ==============================================================================
# Application Configuration
# ==============================================================================

# PygeoAPI Configuration
# The host to connect to (protocol will be automatically determined)
# For production (default):
# VITE_PYGEOAPI_HOST=pygeoapi.dataportal.fi
#
# For development, set to your local pygeoapi instance:
# VITE_PYGEOAPI_HOST=localhost:5000

VITE_PYGEOAPI_HOST=pygeoapi.dataportal.fi

# Other environment variables
# VITE_DIGITRANSIT_KEY=your-key-here
# VITE_SENTRY_DSN=your-sentry-dsn
# SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Feature Flags
# All feature flags default to enabled (true) unless otherwise specified
# Set to 'false' to disable a feature by default

# Data Layer Features
VITE_FEATURE_NDVI=true
VITE_FEATURE_FLOOD_LAYERS=false
VITE_FEATURE_250M_GRID=true
VITE_FEATURE_TREE_COVERAGE=true
VITE_FEATURE_LAND_COVER=true

# Graphics & Performance Features
VITE_FEATURE_HDR=false
VITE_FEATURE_AO=false
VITE_FEATURE_MSAA=true
VITE_FEATURE_FXAA=true
VITE_FEATURE_REQUEST_RENDER=false
VITE_FEATURE_3D_TERRAIN=true

# Analysis Tool Features
VITE_FEATURE_HEAT_HISTOGRAM=true
VITE_FEATURE_BUILDING_SCATTER=true
VITE_FEATURE_COOLING_OPTIMIZER=true
VITE_FEATURE_NDVI_ANALYSIS=true
VITE_FEATURE_SOCIOECONOMIC=true

# UI/UX Features
VITE_FEATURE_COMPACT_VIEW=false
VITE_FEATURE_MOBILE_OPTIMIZED=false
VITE_FEATURE_CONTROL_PANEL_DEFAULT=true
VITE_FEATURE_DATA_SOURCE_STATUS=true
VITE_FEATURE_LOADING_PERF=false
VITE_FEATURE_BACKGROUND_PRELOAD=false

# Integration Features
VITE_FEATURE_BG_MAP_PROVIDERS=true

# Developer Features
VITE_FEATURE_PERF_MONITOR=false
VITE_FEATURE_CACHE_VIZ=false
VITE_FEATURE_HEALTH_CHECKS=false
# Database configuration for dbmate
# Copy to .env and update with your actual database credentials

# PostgreSQL connection for regions4climate database
DATABASE_URL=postgres://username:password@localhost:5432/regions4climate

# Alternative format for Google Cloud SQL with cloud-sql-proxy sidecar
# DATABASE_URL=postgres://username:password@127.0.0.1:5432/regions4climate
